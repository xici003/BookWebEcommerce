@{
}
@using X.PagedList.Mvc.Core;
@model X.PagedList.IPagedList<Translator>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Layout/MyLayout.cshtml";
}
<div class="list-user" >
    @foreach (var s in Model)
    {
        <div class="item-user" style="height:550px" >
            <img class="img-user" style="height:350px" src="@s.Bio" alt="img">
            <h3>@s.Name</h3>
            <p>Age: @s.Age</p>
            <p>Natitonality: @s.Nationality</p>
            <p>Genre: @s.Genre </p>
            <button class="btn-seemore" style="background-color:#e88f2a">
            </button>
            <div class="other" >
                <a asp-action="Create">
                    <span >
                        <i class="fas fa-plus"></i>
                    </span>
                </a>
                <a asp-action="Edit" asp-route-id="@s.Id">
                    <span>
                        <i class="fas fa-edit" ></i>
                    </span>
                </a>
                <a asp-action="Delete" asp-route-id="@s.Id">
                    <span>
                        <i class="fas fa-trash-alt"></i>
                    </span>
                </a>
            </div>
        </div>
    }
</div>
<div class="product__pagination">
    @Html.PagedListPager(Model,page=>Url.Action("Index",new{page=page}))
</div>
