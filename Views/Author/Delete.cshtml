@model BookWebEcommerce.Models.Author

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/Layout/MyLayout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Author</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProfilePictureURL)
        </dt>
        <dd class="col-sm-10">
            <img style="height: 500px" src="@Model.ProfilePictureURL" width="300" height="400" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Bio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Bio)
        </dd>
        <dt class="col-sm-2">
            Book
        </dt>
        <dd class="col-sm-10">
            @{
                List<string> sach = ViewBag.book;
                if (sach == null)
                {
                    <span>Chưa có sách ở cửa hàng</span>
                }
                else if (sach.Count > 0)
                {
                    for (int i = 0; i < sach.Count(); i++)
                    {
                        <span>@sach[i]</span>
                    }
                }
            }
        </dd>
    </dl>

    <form asp-action="Delete" style="margin-top:10px">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
